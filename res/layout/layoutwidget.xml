        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/icon01" 
            android:background="#00000000" android:clickable="true" android:maxHeight="72dp" android:maxWidth="72dp" android:minHeight="72dp" android:minWidth="72dp"/>

	<RelativeLayout
	    android:id="@+id/relativeLayout1"
	    android:layout_width="294dp"
	    android:layout_height="72dp"
	    android:layout_weight="1" >

		<ImageView
		    android:id="@+id/imageView2"
		    android:layout_width="294dp"
		    android:layout_height="72dp"
		    android:src="@drawable/fukidasi002"
		    android:contentDescription="@string/contentDescription" />

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="294dp"
		    android:layout_height="72dp"
		    android:paddingTop="3dp"
		    android:paddingLeft="22dp"
		    android:paddingRight="14dp"
		    android:gravity="left"
		    android:maxHeight="72dp"
		    android:maxWidth="294dp"
		    android:text="@string/init_message"
		    android:textColor="#000000"
		    android:textSize="12dp"
		    android:textStyle="bold" />

	</RelativeLayout>

        

    </LinearLayout>
